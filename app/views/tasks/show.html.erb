<p style="color: green"><%= notice %></p>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Projects", projects_path %></li>
    <li class="breadcrumb-item"><%= link_to @project.name, project_path(@project) %></li>
    <li class="breadcrumb-item"><%= link_to "Tasks", project_tasks_path(@project) %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @task.name %></li>
  </ol>
</nav>

<%= render @task %>

<div>
  <%= link_to "Edit this task", edit_project_task_path(@project, @task) %> |
  <%= link_to "Back to tasks", project_tasks_path(@project) %>

  <%= button_to "Destroy this task", project_task_path(@project, @task), method: :delete %>
</div>
